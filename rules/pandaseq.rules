from scripts.setting import SeqIndex
import os
from subprocess import Popen, PIPE, STDOUT


PANDASEQ_VERSION = Popen(PANDASEQ + " -v", shell=True, stderr=PIPE).stderr.read().strip().decode("utf-8")
print(PANDASEQ_VERSION)
rule run_pandaseq:
    input:
        "Split/{dir}/" + LIBRARY + ".R1.fastq",
        "Split/{dir}/" + LIBRARY + ".R2.fastq"
    output:
        "QC/{dir}/pandaseq.fq"
    params:
        job_name = "Pand"
    version:
        PANDASEQ_VERSION
    threads:
        1
    log:
        "QC/{dir}/pandaseq.log"
    run:
        data_type = wildcards.dir.split("/")[-1].split("_")[-1]
        if F_PRIMER and R_PRIMER:
            f_primer = F_PRIMER
            r_primer = R_PRIMER
        else:
            f_primer = SeqIndex.primer[PRIMER_NAME][data_type]['forward']
            r_primer = SeqIndex.primer[PRIMER_NAME][data_type]['reverse']
        if os.stat(input[0]).st_size and os.stat(input[1]).st_size:
            cmd = " ".join(
            ["-T {threads}",
            "-F",
            "-f {input[0]}",
            "-r {input[1]}",
            "-p " + f_primer,
            "-q " + r_primer,
            "-w {output}",
            "-l 250",
            "-g {log}"])
            shell(PANDASEQ + " " + cmd)
        else:
            shell("touch {output}")
            shell("echo 'No reads in this sample.' > {log}")
